{
  "parser"  : "babel-eslint",
  "extends" : ["airbnb"],
  "rules": {
    "comma-dangle": 0,
    "default-case": 0,
    "global-require": 0,
    "new-cap": [2, {"capIsNew": false, "newIsCap": true}], // For Record() etc.
    "no-class-assign": 0,
    "no-confusing-arrow": 0,
    "react/prefer-stateless-function": 0
  },
  "globals": {
    "after": false,
    "afterEach": false,
    "before": false,
    "beforeEach": false,
    "describe": false,
    "it": false,
    "require": false
  }
}
